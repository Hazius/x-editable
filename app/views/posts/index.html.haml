.page-header
  %h2
    Посты
    = link_to 'Добавить', new_post_path, class: 'btn btn-success btn-sm'

%table.table.table-stripped.table-bordered

  %thead
    %tr
      %th Заголовок
      %th Текст
      %th
      %th

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.body
        %td= link_to 'Показать', post
        %td= link_to 'Удалить', post, :method => :delete, :data => { :confirm => 'Are you sure?' }
